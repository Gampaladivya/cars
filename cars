import java.util.*;
import java.io.*;

 class empdetails
{

 
public static void main(String[] args)

{

int empno,basicpay;


float da,ta,pf,hra,netsalary;

String ename;

Scanner sc = new Scanner(System.in);
  
System.out.println(" employee no: ");

eno= sc.nextInt();
 
System.out.println("employee name");
        
ename= sc.next();

System.out.println(" enter basic pay ");

basicpay= sc.nextInt();
   
da=(basicpay)*15/100;

ta=(basicpay)*20/100;

pf=(basicpay)*12/100;

hra=(basicpay)*23/100;

netsalary=basicpay+da+ta-pf+hra;
System.out.println("car emi is"+netsalary);
}
}

